<script>
let isAdmin = false;
let reports = [];
let currentReportIndex = null;

// LOGIN ADMIN
function loginAdmin() {
  const key = document.getElementById('adminKey').value;
  if(key === 'HC123'){
    isAdmin = true;
    document.getElementById('adminPanel').style.display = 'block';
    alert('Bem-vindo, Administrador!');
  }
  goPage('homePage');
}

// NAVEGAÇÃO ENTRE PÁGINAS
function goPage(pageId){
  document.querySelectorAll('.page').forEach(p => p.style.display='none');
  document.getElementById(pageId).style.display='block';
}

// SUBMIT QUESTIONÁRIO
function submitQuiz(){
  const form = document.getElementById('quizForm');
  const data = {
    area: form.area.value,
    personalidade: form.personalidade.value,
    teamwork: form.teamwork.value,
    temperamento: form.temperamento.value,
    experiencia: form.experiencia.value
  };

  let recomendacao = '';
  if(data.teamwork==='sim' && data.temperamento==='extrovertido') recomendacao = 'Candidato muito adequado!';
  else if(data.teamwork==='nao' && data.temperamento==='introvertido') recomendacao = 'Candidato precisa de acompanhamento.';
  else recomendacao = 'Candidato com perfil equilibrado.';

  const reportText = `
    Área preferida: ${data.area}<br>
    Personalidade: ${data.personalidade}<br>
    Trabalho em equipe: ${data.teamwork}<br>
    Temperamento: ${data.temperamento}<br>
    Experiência: ${data.experiencia}<br>
    Status: ${recomendacao}
  `;
  document.getElementById('report').innerHTML = reportText;

  // salvar relatório
  reports.push({report: reportText, status: 'pendente'});
  currentReportIndex = reports.length-1;

  // atualizar painel admin
  if(isAdmin) updateAdminReports();

  // mostrar decisão para admin
  if(isAdmin) document.getElementById('adminDecision').classList.remove('hidden');

  goPage('resultPage');
}

// DECISÃO DO ADMIN
function acceptCandidate(decision){
  if(currentReportIndex!==null){
    reports[currentReportIndex].status = decision ? 'Aceito' : 'Rejeitado';
    document.getElementById('report').innerHTML += `<br><strong>${decision?'Parabéns! O administrador te aceitou.':'Infelizmente, você não foi aceito.'}</strong>`;
    updateAdminReports();
    document.getElementById('adminDecision').classList.add('hidden');
  }
}

// ATUALIZAR RELATÓRIOS ADMIN
function updateAdminReports(){
  if(!isAdmin) return;
  let html = '';
  reports.forEach((r,i)=>{
    html += `<div><strong>Candidato ${i+1}:</strong><br>${r.report}<br>Status: ${r.status}<hr></div>`;
  });
  document.getElementById('allReports').innerHTML = html;
}

// ATUALIZAR TEXTO HOME
function updateHomeText(){
  const text = document.getElementById('homeTextInput').value;
  document.getElementById('homeText').innerText = text;
  alert('Texto atualizado com sucesso!');
}

// ADICIONAR LINK OU SCRIPT CUSTOM
function addCustom(){
  const content = document.getElementById('customLink').value;
  if(content){
    const div = document.createElement('div');
    div.innerHTML = content;
    document.getElementById('customContent').appendChild(div);
    document.getElementById('customLink').value = '';
  }
}
</script>

</body>
</html>