<!-- PÁGINA ADMIN -->
<div id="adminPanel">
  <h2>Painel Administrador</h2>
  <p><strong>Relatórios de candidatos:</strong></p>
  <div id="allReports"></div>
  <hr>
  <h3>Editar texto da página inicial:</h3>
  <textarea id="homeTextInput" rows="3" cols="50"></textarea><br>
  <button onclick="updateHomeText()">Atualizar Texto</button>
