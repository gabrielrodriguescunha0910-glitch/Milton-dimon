      <option value="colaborador">Colaborador</option>
    </select>

    <p>Você gosta de trabalhar em equipe?</p>
    <select name="teamwork" required>
      <option value="">Escolha...</option>
      <option value="sim">Sim</option>
      <option value="nao">Não</option>
